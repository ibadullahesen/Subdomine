    <div id="subtitle" class="subtitle"></div>
    <div class="scanline"></div>
    <div class="ambient-glow"></div>
    <div class="glitch-flash" id="flash"></div>
    <div class="vignette"></div>

    <div id="scene-container" class="crt">
        <!-- STAGE 1: SYSTEM ACCESS -->
        <div id="stage1" class="stage active">
            <div class="text-left w-full max-w-2xl p-8">
                <div id="terminal-out"></div>
                <div id="cursor1" class="cursor"></div>
            </div>
        </div>

        <!-- STAGE 2: DATA ZOOM -->
        <div id="stage2" class="stage">
            <div id="zoom-field" class="w-full" style="height: 100%; position: relative; overflow: hidden;">
                <!-- Fragments generated by JS -->
            </div>
        </div>

        <!-- STAGE 3: ANONIM CHAT REVEAL -->
        <div id="stage3" class="stage">
            <div id="chat-stream" class="flex flex-col items-center justify-center w-full max-w-2xl">
                <!-- Chat bubbles generated by JS -->
            </div>
        </div>

        <!-- STAGE 4: PURPOSE -->
        <div id="stage4" class="stage">
            <div class="w-full max-w-2xl p-8">
                <div id="purpose-q"></div>
                <div id="purpose-a"></div>
            </div>
        </div>

        <!-- STAGE 5: FINAL MESSAGE -->
        <div id="stage5" class="stage">
            <div class="border" style="border: 1px solid rgba(0, 255, 65, 0.2); padding: 3rem; border-radius: 8px;">
                <h1>AXTARGET</h1>
                <p>Tam Anonim Chat Platformu</p>
            </div>
        </div>
    </div>

    <script>
        const terminalOut = document.getElementById('terminal-out');
        const flash = document.getElementById('flash');
        const sceneContainer = document.getElementById('scene-container');

        function sleep(ms) {
            return new Promise(resolve => setTimeout(resolve, ms));
        }

        async function triggerFlash(duration = 50, intensity = 0.8) {
            if (flash) {
                flash.style.opacity = intensity;
                flash.style.transition = 'opacity 0.05s ease-out';
                await sleep(duration);
                flash.style.opacity = '0';
            }
        }

        async function typeText(el, text, speed = 15) {
            for (let char of text) {
                el.innerHTML += char;
                await sleep(speed + Math.random() * 8);
            }
            el.innerHTML += '<br>';
        }

        async function randomGlitch() {
            if (Math.random() > 0.85) {
                await triggerFlash(20, 0.3);
            }
        }

        function showSubtitle(text, duration = 3000) {
            const subtitleEl = document.getElementById('subtitle');
            if (subtitleEl) {
                subtitleEl.innerText = text;
                subtitleEl.classList.add('active');
            }
            return new Promise(resolve => {
                setTimeout(() => {
                    subtitleEl?.classList.remove('active');
                    resolve(null);
                }, duration);
            });
        }

        async function startCinematic() {
            if (!terminalOut || !flash || !sceneContainer) return;

            // --- STAGE 1 ---
            await sleep(400);
            await showSubtitle("Sistem başlayır...", 2000);

            terminalOut.style.textShadow = '0 0 20px rgba(0, 255, 65, 0.5)';
            await typeText(terminalOut, "> SYSTEM INITIALIZING...");
            await sleep(200);

            await showSubtitle("AXTARGET şəbəkəsinə qoşulur", 2000);
            await typeText(terminalOut, "> connecting to AXTARGET network...");
            await sleep(250);

            await randomGlitch();
            await showSubtitle("Kimlik doğrulama atlanır", 2000);
            await typeText(terminalOut, "> bypassing identity verification layer...");
            await sleep(200);

            await randomGlitch();
            await showSubtitle("İstifadəçi məlumatı axtarılır...", 2000);
            await typeText(terminalOut, "> scanning for user data...");
            await sleep(150);

            await typeText(terminalOut, "> identity: <span style='color: #ff003c; text-shadow: 0 0 10px #ff003c;'>NOT FOUND</span>", 8);
            await sleep(400);
            await showSubtitle("Mükəmməl. Sən anonim olacaqsan.", 2500);

            const cursor1 = document.getElementById('cursor1');
            if (cursor1) cursor1.style.display = 'none';
            await triggerFlash(150, 0.6);

            // --- STAGE 2 ---
            await sleep(300);
            await showSubtitle("Məlumatlar təmizlənir", 2000);

            const stage1 = document.getElementById('stage1');
            const stage2 = document.getElementById('stage2');
            stage1?.classList.remove('active');
            stage2?.classList.add('active');

            await sleep(200);
            await showSubtitle("Kimlik heç bir yerdə qeyd edilmədi", 2500);

            const zoomField = document.getElementById('zoom-field');
            const azWords = ["ad yoxdur", "profil yoxdur", "iz yoxdur", "anonim", "sifr", "gizli"];

            if (zoomField) {
                for (let i = 0; i < 80; i++) {
                    const frag = document.createElement('div');
                    frag.className = 'code-fragment';
                    frag.innerText = Math.random() > 0.5
                        ? Math.random().toString(16).substring(2, 10)
                        : azWords[Math.floor(Math.random() * azWords.length)];
                    frag.style.left = Math.random() * 100 + '%';
                    frag.style.top = Math.random() * 100 + '%';
                    frag.style.fontSize = Math.random() * 2.5 + 0.8 + 'rem';
                    frag.style.color =
                        Math.random() > 0.7
                            ? 'rgba(0, 240, 255, 0.4)'
                            : 'rgba(0, 255, 65, 0.3)';
                    zoomField.appendChild(frag);

                    frag.animate(
                        [
                            {
                                transform: 'translateZ(-1500px) scale(0) rotateY(-45deg)',
                                opacity: '0'
                            },
                            {
                                transform: 'translateZ(0) scale(1.5) rotateY(0deg)',
                                opacity: '0.8'
                            },
                            {
                                transform: 'translateZ(1500px) scale(4) rotateY(45deg)',
                                opacity: '0'
                            }
                        ],
                        {
                            duration: 1000,
                            delay: i * 8,
                            easing: 'cubic-bezier(0.34, 1.56, 0.64, 1)',
                            fill: 'forwards'
                        }
                    );
                }
            }

            sceneContainer.style.transform = 'scale(6) rotate(8deg)';
            await sleep(1200);
            await triggerFlash(100, 0.7);

            // --- STAGE 3 ---
            await sleep(400);
            await showSubtitle("Real insanlar gerçek söyləyir", 2000);

            sceneContainer.style.transform = 'scale(1) rotate(0deg)';
            stage2?.classList.remove('active');
            const stage3 = document.getElementById('stage3');
            stage3?.classList.add('active');

            const msgs = [
                "salam",
                "burda kimsə var?",
                "səni tanımıram",
                "kimdir bu?",
                "sistem stabil mi?",
                "mesaj silindi",
                "iz qalmadı",
                "anonim dəstəyi",
                "kimin adı?"
            ];
            const chatStream = document.getElementById('chat-stream');

            if (chatStream) {
                for (let i = 0; i < 10; i++) {
                    const bubble = document.createElement('div');
                    bubble.className = 'chat-bubble';
                    bubble.style.animationDelay = `${i * 0.1}s`;
                    chatStream.appendChild(bubble);

                    await typeText(bubble, msgs[i % msgs.length], 10 + Math.random() * 8);
                    bubble.style.opacity = '1';
                    bubble.style.transform = `translateX(${Math.random() * 60 - 30}px) translateZ(${Math.random() * 150}px)`;

                    if (Math.random() > 0.6) {
                        bubble.classList.add('glitch-text');
                        bubble.style.borderLeftColor = Math.random() > 0.5 ? '#00f0ff' : '#ff003c';
                    }

                    await sleep(150 + Math.random() * 100);
                    sceneContainer.style.transform = `scale(${1 + i * 0.015}) rotate(${i * 0.3}deg)`;
                    await randomGlitch();
                }
            }

            await sleep(600);
            await showSubtitle("Heç kim sənin kim olduğunu bilməz", 2500);
            await sleep(400);
            await triggerFlash(200, 0.8);

            // --- STAGE 4 ---
            await sleep(500);
            stage3?.classList.remove('active');
            const stage4 = document.getElementById('stage4');
            stage4?.classList.add('active');

            await showSubtitle("Nə mənalı bir söhbət yaradır?", 2000);

            const q = document.getElementById('purpose-q');
            if (q) {
                q.innerText = "MARAĞI NƏDİR?";
                q.style.opacity = '1';
                q.style.transform = 'scale(0.8)';
                q.animate(
                    [
                        { opacity: '0', transform: 'scale(0.5)' },
                        { opacity: '1', transform: 'scale(1)' }
                    ],
                    {
                        duration: 500,
                        easing: 'cubic-bezier(0.34, 1.56, 0.64, 1)',
                        fill: 'forwards'
                    }
                );
            }

            await sleep(500);

            const answers = [
                "➤ əsl kimliksiz söhbət",
                "➤ heç bir yerdə iz qoymadan",
                "➤ əslində özün olmaq"
            ];
            const aContainer = document.getElementById('purpose-a');

            if (aContainer) {
                for (let idx = 0; idx < answers.length; idx++) {
                    const ans = answers[idx];
                    const row = document.createElement('div');
                    row.className = 'purpose-row';
                    row.style.color = idx % 2 === 0 ? '#00ff41' : '#00f0ff';
                    row.innerText = ans;
                    aContainer.appendChild(row);
                    await sleep(400);
                    row.classList.add('show');
                    await triggerFlash(30, 0.3);
                }
            }

            await sleep(800);
            await triggerFlash(120, 0.9);

            // --- STAGE 5 ---
            await sleep(600);
            await showSubtitle("AXTARGET - Tam Anonim Chat Platformu", 3000);

            stage4?.classList.remove('active');
            const stage5 = document.getElementById('stage5');
            stage5?.classList.add('active');
            sceneContainer.style.transform = 'scale(1) perspective(1000px) rotateX(2deg)';

            await sleep(1000);
            await showSubtitle("Qeydiyyat. Kimlik. Məlumat. Heç biri yoxdur.", 3000);

            await sleep(1000);
            await showSubtitle("Sənin kimliyin sənə xasdır. Qorumaq üçün AXTARGET.", 3000);

            let glitchInterval = setInterval(() => {
                if (Math.random() > 0.92) {
                    triggerFlash(30 + Math.random() * 40, 0.2 + Math.random() * 0.3);
                }
            }, 150);

            const finalContainer = document.querySelector('#stage5 > div');
            if (finalContainer) {
                setInterval(() => {
                    const rotation = Math.sin(Date.now() * 0.0005) * 0.5;
                    finalContainer.style.transform = `perspective(1200px) rotateY(${rotation}deg)`;
                }, 50);
            }
        }

        // Start animation when page loads
        startCinematic();
    </script>
</body>
</html>
